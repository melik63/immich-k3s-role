apiVersion: v1
kind: PersistentVolume
metadata:
  name: immich-upload-pv
spec:
  capacity:
    storage: 20Gi
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  hostPath:
    path: /mnt/immich/uploads
    type: Directory
