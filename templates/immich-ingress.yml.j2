# roles/immich2/templates/immich-ingress.yml.j2
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: immich-server-ingress
  namespace: {{ immich_namespace }}
  annotations:
    traefik.ingress.kubernetes.io/router.entrypoints: "web"
    ingress.kubernetes.io/whitelist-source-range: "0.0.0.0/0"
spec:
  ingressClassName: traefik
  rules:
    - http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: immich-server-svc
                port:
                  number: 2283
